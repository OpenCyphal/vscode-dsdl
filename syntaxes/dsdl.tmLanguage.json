{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DSDL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#storage"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.dsdl",
					"match": "\\b(union)\\b"
				},
				{
					"name": "keyword.control.dsdl",
					"match": "^--- *$"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.dsdl",
			"begin": "(\"|\\')",
			"end": "(\"|\\')",
			"patterns": [
				{
					"name": "constant.character.escape.dsdl",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"match": "#.*",
				"name": "comment.line.number-sign.dsdl"
			}]
		},
		"constants": {
			"patterns": [
				{
					"match": "\\b0[xX][0-9a-fA-F]+\\b",
					"name": "constant.numeric.dsdl"
				},
				{
					"match": "\\b0o[0-7]+\\b",
					"name": "constant.numeric.dsdl"
				},
				{
					"match": "\\b0[b][0-1]+\\b",
					"name": "constant.numeric.dsdl"
				},
				{
					"match": "\\b[-+]?[1-9]+(?:\\.\\d+)?[Ee][-+]?\\d+\\b",
					"name": "constant.numeric.dsdl"
				},
				{
					"match": "[-+]?[0-9]*\\.?[0-9]+",
					"name": "constant.numeric.dsdl"
				},
				{
					"match": "\\b(true|false)\\b",
					"name": "constant.language.dsdl"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"match": "\\b[u]?int([2-9]|[1-5][0-9]|6[0-4])\\b|\\bfloat(16|32|64)\\b|\\bvoid([1-9]|[1-5][0-9]|6[0-4])\\b|\\bbool\\b",
					"name": "storage.type.dsdl"
				},
				{
					"match": "^\\b(\\w\\.?)+(\\[[0-9]+\\])? \\b",
					"name": "storage.type.dsdl"
				},
				{
					"match": "\\b(saturated|truncated)\\b",
					"name": "storage.modifier.dsdl"
				}
			]
		}
	},
	"scopeName": "source.dsdl"
}